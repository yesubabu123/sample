import 'package:flutter/material.dart';
import 'package:provider/provider.dart';

void main() {
  runApp(ChangeNotifierProvider(
    create: (_) => Counter(),
    child: const MaterialApp(home: MyHome()),
  ));
}

class Counter with ChangeNotifier {
  int count = 0;
  void inc() {
    count++;
    notifyListeners();
  }
}

class MyHome extends StatefulWidget {
  const MyHome({super.key});
  @override
  State<MyHome> createState() => _MyHomeState();
}

class _MyHomeState extends State<MyHome> {
  int local = 0;

  @override
  Widget build(BuildContext context) {
    final prov = Provider.of<Counter>(context);
    return Scaffold(
      appBar: AppBar(title: const Text('setState vs Provider')),
      body: Center(
        child: Column(mainAxisAlignment: MainAxisAlignment.center, children: [
          Text("setState: $local"),
          ElevatedButton(
              onPressed: () => setState(() => local++),
              child: const Text("Add setState")),
          const SizedBox(height: 20),
          Text("Provider: ${prov.count}"),
          ElevatedButton(
              onPressed: prov.inc, child: const Text("Add Provider")),
        ]),
      ),
    );
  }
}
